<h1>Text</h1>
<h1>
  {{ section.settings.liquid-ref }}
</h1>

<h1>Checkbox</h1>
{% if section.settings.liquid-checkbox == true %}
  <h2>
    Checkbox is checked
  </h2>
{% else %}
  <h2>Checkbox is NOT checked</h2>
{% endif %}

<h1>Number</h1>
{% if section.settings.liquid-number != 0 %}
  {{ section.settings.liquid-number }}
{% endif %}

<h1>Radio</h1>
{% if section.settings.liquid-radio == 'option-1' %}
  Option 1 selected
{% else %}
  Option 2 selected
{% endif %}

<h1>Range</h1>
{{ section.settings.liquid-range }}

<h1>Select</h1>
{{ section.settings.liquid-select }}

<h1>Text Area</h1>
{{ section.settings.liquid-textarea }}

<style>
  body {
    font-family: Arial, sans-serif;
    background: url('http://www.shukatsu-note.com/wp-content/uploads/2014/12/computer-564136_1280.jpg') no-repeat;
    background-size: cover;
    height: 100vh;
  }

  h1 {
    text-align: center;
    font-family: Tahoma, Arial, sans-serif;
    color: #06D85F;
    margin: 80px 0;
  }

  .box {
    width: 40%;
    margin: 0 auto;
    background: rgba(255, 255, 255, 0.2);
    padding: 35px;
    border: 2px solid #fff;
    border-radius: 20px / 50px;
    background-clip: padding-box;
    text-align: center;
  }

  .button {
    font-size: 1em;
    padding: 10px;
    color: #fff;
    border: 2px solid #06D85F;
    border-radius: 20px / 50px;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s ease-out;
  }
  .button:hover {
    background: #06D85F;
  }

  .overlay {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.7);
    transition: opacity 500ms;
    visibility: hidden;
    opacity: 0;
  }
  .overlay:target {
    visibility: visible;
    opacity: 1;
  }

  .popup {
    margin: 70px auto;
    padding: 20px;
    background: #fff;
    border-radius: 5px;
    width: 30%;
    position: relative;
    transition: all 5s ease-in-out;
  }

  .popup h2 {
    margin-top: 0;
    color: #333;
    font-family: Tahoma, Arial, sans-serif;
  }
  .popup .close {
    position: absolute;
    top: 20px;
    right: 30px;
    transition: all 200ms;
    font-size: 30px;
    font-weight: bold;
    text-decoration: none;
    color: #333;
  }
  .popup .close:hover {
    color: #06D85F;
  }
  .popup .content {
    max-height: 30%;
    overflow: auto;
  }

  @media screen and (max-width: 700px) {
    .box {
      width: 70%;
    }
    .popup {
      width: 70%;
    }
  }
</style>

<h1>Popup/Modal Windows without JavaScript</h1>
<div class="box">
  <a class="button" href="#popup1">Let me Pop up</a>
</div>

<div id="popup1" class="overlay">
  <div class="popup">
    <h2>Here i am</h2>
    <a class="close" href="#">&times;</a>
    <div class="content">
      Thank to pop me out of that button, but now i'm done so you can close this window.
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Liquid Reference",
    "settings": [
      {
        "id": "liquid-ref",
        "type": "text",
        "label": "A Reference for shopify liquid"
      },
      {
        "id": "liquid-checkbox",
        "type": "checkbox",
        "label": "A checkbox in liquid"
      },
      {
        "id": "liquid-number",
        "type": "number",
        "label": "A number in liquid"
      },
      {
        "id": "liquid-radio",
        "type": "radio",
        "label": "Add a radio button",
        "options": [
          {
            "value": "option-1",
            "label": "Option 1"
          }, {
            "value": "option-2",
            "label": "Option 2"
          }
        ]
      }, {
        "id": "liquid-range",
        "type": "range",
        "label": "A range in liquid",
        "default": 21,
        "min": 21,
        "max": 37,
        "step": 1
      }, {
        "id": "liquid-select",
        "type": "select",
        "label": "A select in liquid",
        "options": [
          {
            "value": "selected-value-1",
            "label": "Selected value 1"
          }, {
            "value": "selected-value-2",
            "label": "Selected value 2"
          }
        ],
        "default": "selected-value-2"
      }, {
        "id": "liquid-textarea",
        "type": "textarea",
        "label": "A textarea in liquid"
      }
    ],
    "templates": [
      "index", "page", "product"
    ],
    "presets": [
      {
        "name": "Liquid Reference",
        "category": "Reference"
      }
    ]
  }
{% endschema %}